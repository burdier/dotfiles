;{{{ module/temperature

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = " "
format-prefix-foreground = ${self.format-underline}
format-underline = #f50a4d
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

