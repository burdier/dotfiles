border-color = #000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = siji:pixelsize=12;1
font-1 = FuraCode Nerd Font:pixelsize=10;1
font-2 = Noto Color Emoji:pixelsize=4
